{
    "compilerOptions": {
      "outDir": "dist",
      "noImplicitAny": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "target": "es6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "paths": {
        "rxjs": ["../../node_modules/rxjs"],
        "rxjs/*": ["../../node_modules/rxjs/*"]
      },
      "strict": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "noUncheckedIndexedAccess": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
  }