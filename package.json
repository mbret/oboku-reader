  "scripts": {
    "start": "lerna run start --stream --ignore prose-reader-front",
    "start:lib": "lerna run start --stream --scope @prose-reader/*",
    "start:front": "lerna run dev --stream --scope prose-reader-front",
    "build": "lerna run build --stream",
    "tsc": "lerna run tsc --parallel",
    "lint": "lerna run lint --parallel",
    "lint:check": "lerna run lint:check --parallel",
    "lint:write": "lerna run lint:write --parallel --verbose",
    "test": "lerna run test --parallel",
    "publish-packages": "yarn test && yarn build && lerna publish minor --yes",
    "misc:check-pack": "npm pack && tar -xvzf *.tgz && rm -rf package *.tgz"
  },
  "workspaces": [
    "packages/*"
  ],
